    body
      .sidebar.menu#sidebar
        li.big
          a(href="#") Bumbler
        each category in menuCategories
          p.menu-label= category
          ul.menu-list
            each t in menuItems[category]
              li
                a(href=t.href class=t.class?t.class:'' id=t.id?t.id:'' target=t.target?t.target:'')!= t.title

      #app

        hash-template#files
