<!DOCTYPE html>
  head
    title Bumbler Admin
    style
      include ../../node_modules/fine-uploader/fine-uploader/fine-uploader.css
    link(rel="stylesheet" type="text/css" href="style.css")

  - var menuCategories = ['posts','files','general']
  - var menuItems = {posts: [{title:'â•&#xFE0E; create',href:"#post/create"},{title:'ğŸ“&#xFE0E; manage',href:"#posts"}], files: [{title:'ğŸ“&#xFE0E; manage',href:"#files"}], general: [{title:'<b>&#60;&#47;&#62;</b> edit template',href:"#html"},{title:'âœˆï¸&#xFE0E; publish',href:"#publish"},{title:'âš™ï¸&#xFE0E; settings',href:"#settings"}]}
  body
    .sidebar.menu#sidebar
      li.big
        a(href="#") Bumbler Admin
      each category in menuCategories
        p.menu-label= category
        ul.menu-list
          each t in menuItems[category]
            li
              a(href=t.href class=t.active?'is-active':'')!= t.title

    #app
      hash-template#settings
        h1.title Settings
        form
          each option in ['Git Publish URL','Title']
            .field
              label.label=option
                input.input(type="text")
          button.button.is-primary Save
      hash-template#files
        div
          h1.title Upload
          input(type="file").button.is-default
          h1.title Files
          .file-view
      hash-template#publish
        h1.title Publish
        p.control
          a(href='/').button ğŸ‘ï¸ View
        p.control
          form(method="post" action="/admin/publish")
            button(type="submit").button.is-primary âœˆï¸ Publish to Git Repo
      hash-template#post-create
        div
          h1.title Create Post
            div.editor

      hash-template#html
        h1.title Edit site template
        span#htmleditor

      hash-template#404
          h1.title Sorry, couldn't find that page :(

      script(src="app.js")
    #popup-area

    include uploader-template.html
