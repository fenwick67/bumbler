- // note :&#xFE0E; is to make emoji characters into text
- var menuCategories = ['actions','posts','files','customize','extras']
-
  var menuItems = {
    "actions":[
      {title:'<span class="icon">👁&#xFE0E;</span>️&nbsp;&nbsp;&nbsp;View',href:"/",class:"button is-default", target:"_blank"},
      {title:'<span class="icon">🌙&#xFE0E;</span>&nbsp;&nbsp;&nbsp;Nighttime',id:"toggle-night-mode",class:"button is-default"},
      {title:'<span class="icon">↻︎&#xFE0E;</span>&nbsp;&nbsp;&nbsp;Build',id:"run-a-build",class:"button is-default"},
      {title:'<span class="icon">🚫&#xFE0E;</span>&nbsp;&nbsp;&nbsp;Log Out',id:"logout",class:"button is-default"}
    ],
    "posts": [
      {title:'<span class="icon">➕&#xFE0E;</span> Create',href:"#post/create"},
      {title:'<span class="icon">📁&#xFE0E;</span> Manage',href:"#posts"}
    ],
    "files": [{title:'<span class="icon">📁&#xFE0E;</span> Manage',href:"#files"}],
    "customize":[
      {title:'<span class="icon">⚙&#xFE0E;</span> Settings',href:"#settings"},
      {title:'<span class="icon">✨&#xFE0E;</span> Theme',href:"#html"},
      {title:'<span class="icon">📝&#xFE0E;</span> Pages',href:"#custompages"}
    ],
    "extras": [
      {title:'<span class="icon">💻&#xFE0E;</span> Scripts',href:"#scripts"}
    ]
  }

<!DOCTYPE html>
  html.admin
    head
      title Bumbler Admin
      style
      <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
      link(rel="stylesheet" type="text/css" href="./style.css")
    body
      .sidebar.menu#sidebar
        li.big
          a(href="#") Bumbler
        each category in menuCategories
          p.menu-label= category
          ul.menu-list
            each t in menuItems[category]
              li
                a(href=t.href class=t.class?t.class:'' id=t.id?t.id:'' target=t.target?t.target:'')!= t.title

      #app
        noscript
          p Hey buddy.  You'll need Javascript to use Bumbler's admin interface.
          p Don't worry: <a href="https://github.com/fenwick67/bumbler">it's Free Software</a> and doesn't track anything, period.
        hash-template#files
          .panel
            .panel-header
              h1.title Files
              h2.subtitle These are located in <code>/assets</code> on your server.
            .file-view

        // posts
        hash-template#post-create
          .panel
            .panel-header
              h1.title Create Post
            div.editor
        hash-template#post-edit
          .panel
            .panel-header
              h1.title Edit Post
            .editor
        hash-template#posts
          .panel
            .panel-header
              h1.title Manage Posts
            #posts-list

        // settings
        hash-template#html
          .panel
            .panel-header
              h1.title Edit site template
              h2.subtitle Site templates use the Pug templating language.
            span#htmleditor
        hash-template#settings
          .panel
            .panel-header
              h1.title Settings
            form
        hash-template#scripts
          .panel
            .panel-header
              h1.title Scripts
          div

        // custom pages
        hash-template#custompages
          .panel
            .panel-header
              h1.title Custom Pages
              h2.subtitle Custom pages let you add things like an About, Contact, or FAQ page.
            #custom-page-list

        hash-template#404
            h1.title Sorry, couldn't find that page :(

        script(src="./app.js")
      #popup-area
