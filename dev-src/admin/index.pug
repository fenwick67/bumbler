<!DOCTYPE html>
  head
    title Bumbler Admin
    link(rel="stylesheet" type="text/css" href="style.css")

  - var menuCategories = ['posts','files','general']
  - var menuItems = {posts: [{title:'➕&#xFE0E; new',href:"#posts/new"},{title:'📁&#xFE0E; manage',href:"#posts"}], files: [{title:'📁&#xFE0E; manage',href:"#files"}], general: [{title:'⌨️&#xFE0E; edit template',href:"#html"},{title:'✈️&#xFE0E; publish',href:"#publish"},{title:'⚙️&#xFE0E; settings',href:"#settings"}]}
  body
    .sidebar.menu#sidebar
      li.big
        a(href="#") Bumbler Admin
      each category in menuCategories
        p.menu-label= category
        ul.menu-list
          each t in menuItems[category]
            li
              a(href=t.href class=t.active?'is-active':'')!= t.title

    #app
      hash-template#settings
        h1.title Settings
        form
          each option in ['Git Publish URL','Title']
            .field
              label.label=option
                input.input(type="text")
          button.button.is-primary Save
      hash-template#files
        div
          h1.title Upload
          input(type="file").button.is-default
          h1.title Files
          .file-view
      hash-template#publish
        h1.title publish
        p.control
          a(href='/').button 👁️ View
        p.control
          form(method="post" action="/admin/publish")
            button(type="submit").button.is-primary ✈️ Publish to Git Repo

      hash-template#html
        h1.title edit HTML
        span#htmleditor

      hash-template#404
        .content
          h1 Sorry, couldn't find that page :(


      script(src="app.js")
    #popup-area
