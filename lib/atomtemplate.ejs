<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom" xmlns:thr="http://purl.org/syndication/thread/1.0" xmlns:activity="http://activitystrea.ms/spec/1.0/" xmlns:poco="http://portablecontacts.net/spec/1.0" xmlns:media="http://purl.org/syndication/atommedia" xmlns:ostatus="http://ostatus.org/schema/1.0">
  <id><%= path.join(site.siteUrl,'feed.atom') %></id>
  <title><%= site.title %></title>
  <% if site.description {%>
  <subtitle><%= site.description  %></subtitle>
  <% } %>
  <updated><%= moment.format() %></updated>
  <% if site.avatar {%>
  <logo><%= site.avatar %></logo>
  <% } %>
  <author>
    <id><%= site.siteUrl %></id>
    <activity:object-type>http://activitystrea.ms/schema/1.0/person</activity:object-type>
    <uri><%= site.siteUrl %></uri>
    <name><%= site.authorName %></name>
    <summary type="html">&lt;p&gt;<%= site.description %>&lt;/p&gt;</summary>
    <link rel="alternate" type="text/html" href="<%= site.siteUrl %>"/>
    <% if site.avatar {%>
    <link rel="avatar" type="<%= mime.lookup(avatar) %>" media:width="120" media:height="120" href="<%= "TODO" %>"/>
    <% } %>
    <poco:displayName><%= site.authorName %></poco:displayName>
    <poco:note><%= site.description  %></poco:note>
  </author>
  <link rel="alternate" type="text/html" href="<%= site.siteUrl %>"/>
  <link rel="self" type="application/atom+xml" href="<%= path.join(site.siteUrl,'feed.atom') %>"/>
  <% for (var i = 0; i < posts.length; i ++ ){ var post = posts[i]%>
  <entry>
    <id><%= post.id %></id>
    <published><%= post.date %></published>
    <updated><%= post.date %></updated>
    <title><%= post.title || "New Post on "+site.title %></title>
    <activity:object-type>http://activitystrea.ms/schema/1.0/note</activity:object-type>
    <activity:verb>http://activitystrea.ms/schema/1.0/post</activity:verb>
    <content type="html" xml:lang="en"><% = post.bareHtml %></content>
    <link rel="mentioned" ostatus:object-type="http://activitystrea.ms/schema/1.0/person" href="<%= site.authorName %>"/>
    <%= for (var j = 0; j < post.assets.length; j ++){ var e = post.assets[j] %>
    <link rel="enclosure" type="<%= e.mimetype %>" href="<%= path.join(site.siteUrl,e.href) %>"/>
    <% } %>
    <link rel="alternate" type="text/html" href="<%= path.join(site.siteUrl,post.permalink) %>"/>
  </entry>
  <% } %>
</feed>
